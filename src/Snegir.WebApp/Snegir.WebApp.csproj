  <ItemGroup>
    <None Include="wwwroot\app\actions\contentActions.js" />
    <None Include="wwwroot\app\actions\logActions.js" />
    <None Include="wwwroot\app\components\app.js" />
    <None Include="wwwroot\app\components\content.js" />
    <None Include="wwwroot\app\components\contentRating.js" />
    <None Include="wwwroot\app\components\rating.js" />
    <None Include="wwwroot\app\constants\index.js" />
    <None Include="wwwroot\app\dispatcher\index.js" />
    <None Include="wwwroot\app\index.js" />
    <None Include="wwwroot\app\stores\contentStore.js" />
    <None Include="wwwroot\app\stores\logStore.js" />
    <None Include="wwwroot\scss\styles.scss" />
  </ItemGroup>

  <Target Name="PreBuild" BeforeTargets="PreBuildEvent">
    <Exec Command="npm run build" />
  </Target>

</Project>
